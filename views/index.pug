extends layout

block content
  div(ng-controller='SideNavCtrl' layout="row")
  div
  md-sidenav(class="md-sidenav-left site-sidenav" md-component-id="left" md-is-locked-open="$mdMedia('gt-md')")
   md-toolbar(class="md-theme-indigo")
    h1(class="md-toolbar-tools") Options
   md-content
    md-list
    md-list-item(class="md-3-line" ng-click='getMessages()')
      div(class="md-list-item-text")
       h3 Messages
    md-list-item(class="md-3-line" ng-click='closeSideNav()' hide-gt-md)
      div(class="md-list-item-text")
       h3 Close
  div(layout-padding)
  h1= title
   p Welcome to #{title}
   div
    md-button(ng-click="toggleLeft()" class="md-primary" hide-gt-md) Menu
  div(ng-controller='AppCtrl')
      .col
        h3 Messages
        .overflowable
          p(ng-repeat='message in messages',
            ng-class='{alert: message.user == "chatroom"}') {{message.user}}: {{message.text}}
      .col
        h3 Users
        .overflowable
          p(ng-repeat='user in users') {{user.accountId}} {{user.accountType}} {{user.address}} img.className#IdName(src="{{user.profilePics}}" alt="Image Title")

  div(ng-view)
